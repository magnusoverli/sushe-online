{
  "all": true,
  "include": ["**/*.js"],
  "exclude": [
    "node_modules/**",
    "test/**",
    "coverage/**",
    "public/js/bundle.js",
    "dist/**",
    "vite.config.js",
    "postcss.config.js",
    "tailwind.config.js",
    "eslint.config.js"
  ],
  "reporter": ["text", "html", "lcov"],
  "check-coverage": true,
  "lines": 80,
  "functions": 80,
  "branches": 70,
  "statements": 80
}
