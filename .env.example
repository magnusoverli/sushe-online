# Session Configuration
SESSION_SECRET=your-session-secret-here

# Email Configuration
# Option 1: Resend (recommended - 3,000 free emails/month)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxx
EMAIL_FROM=noreply@yourdomain.com
# For testing without domain verification, use: onboarding@resend.dev

# Option 2: SendGrid (requires paid plan after trial)
# SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxx
# EMAIL_FROM=noreply@yourdomain.com

# Application Configuration
BASE_URL=http://localhost:3000

# Spotify Integration
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=http://localhost:3000/auth/spotify/callback

# Tidal Integration
TIDAL_CLIENT_ID=your-tidal-client-id
TIDAL_REDIRECT_URI=http://localhost:3000/auth/tidal/callback

# Last.fm Integration
# Get API key at: https://www.last.fm/api/account/create
LASTFM_API_KEY=your-lastfm-api-key
LASTFM_SECRET=your-lastfm-secret

# Database Configuration (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/sushe_online

# Logging Configuration
LOG_LEVEL=INFO

# Proxy Configuration (Optional - auto-detected in production)
# Set to 1 if behind a single reverse proxy (nginx, cloudflare, docker)
# Set to number of proxies in chain, or specify trusted proxy IPs
# TRUST_PROXY=1

# Rate Limiting Configuration (Optional - uses smart defaults)
# Adjust these if you need custom rate limits
# RATE_LIMIT_FORGOT_MAX=5
# RATE_LIMIT_RESET_MAX=5
# RATE_LIMIT_LOGIN_MAX=5
# RATE_LIMIT_REGISTER_MAX=3
# DISABLE_RATE_LIMITING=false