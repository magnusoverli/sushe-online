{
  "name": "sushe-online",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:js\" \"nodemon --ignore data/ --ignore *.log index.js\"",
    "build:css": "postcss src/styles/input.css -o public/styles/output.css",
    "build:js": "esbuild src/js/main.js --bundle --minify --sourcemap --outfile=public/js/bundle.js",
    "build": "npm run build:css && npm run build:js",
    "watch:css": "postcss src/styles/input.css -o public/styles/output.css --watch",
    "watch:js": "esbuild src/js/main.js --bundle --sourcemap --outfile=public/js/bundle.js --watch",
    "test": "node --test"
  },
  "dependencies": {
    "better-sqlite3": "^9.0.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.3",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "session-file-store": "^1.5.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.4.17",
    "cssnano": "^6.0.2",
    "esbuild": "^0.21.0"
  }
}
