{
  "name": "sushe-online",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node index.js",
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:js\" \"nodemon --ignore data/ --ignore *.log index.js\"",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss src/styles/input.css -o public/styles/output.css",
    "build:js": "vite build",
    "watch:css": "postcss src/styles/input.css -o public/styles/output.css --watch",
    "watch:js": "vite build --watch",
    "test": "node --test test/security-middleware.test.js test/session-management.test.js test/auth-utils.test.js test/basic.test.js",
    "test:coverage": "c8 --reporter=text --reporter=html --reporter=lcov node --test",
    "test:watch": "node --test --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:security": "npm audit --audit-level=moderate",
    "test:security:full": "npm audit && npm outdated",
    "test:all": "npm run lint && npm test && npm run test:coverage && npm run test:security",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "migrate": "node scripts/migrate.js",
    "migrate:up": "node scripts/migrate.js up",
    "migrate:down": "node scripts/migrate.js down",
    "migrate:status": "node scripts/migrate.js status",
    "migrate:create": "node scripts/migrate.js create",
    "changelog": "node scripts/update-changelog.js",
    "changelog:quick": "node scripts/update-changelog.js",
    "changelog:git": "node scripts/update-changelog.js --git",
    "changelog:setup": "bash scripts/setup-git-hooks.sh",
    "optimize:icons": "bash scripts/optimize-icons.sh"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "chokidar": "^4.0.3",
    "compression": "^1.7.4",
    "connect-pg-simple": "^10.0.0",
    "csrf": "^3.1.0",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.1",
    "helmet": "^8.1.0",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.3",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "session-file-store": "^1.5.0",
    "sortablejs": "^1.15.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.54.1",
    "autoprefixer": "^10.4.21",
    "c8": "^10.1.3",
    "concurrently": "^9.1.2",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-security": "^3.0.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.6.2",
    "supertest": "^7.1.3",
    "tailwindcss": "^3.4.17",
    "vite": "^7.0.0"
  }
}
