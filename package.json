{
  "name": "sushe-online",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node index.js",
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:js\" \"nodemon --ignore data/ --ignore *.log index.js\"",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss src/styles/input.css -o public/styles/output.css",
    "build:js": "vite build",
    "watch:css": "postcss src/styles/input.css -o public/styles/output.css --watch",
    "watch:js": "vite build --watch",
    "test": "node --test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "migrate": "node scripts/migrate.js",
    "migrate:up": "node scripts/migrate.js up",
    "migrate:down": "node scripts/migrate.js down",
    "migrate:status": "node scripts/migrate.js status",
    "migrate:create": "node scripts/migrate.js create",
    "plan:init": "node planning-system.js init",
    "plan:update": "node planning-system.js update",
    "plan:watch": "node planning-system.js watch",
    "plan:create": "node planning-utils.js create-plan",
    "plan:report": "node planning-utils.js report",
    "plan:complete": "node planning-utils.js auto-complete"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "csrf": "^3.1.0",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "helmet": "^8.1.0",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.3",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "session-file-store": "^1.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "vite": "^6.3.5"
  }
}
